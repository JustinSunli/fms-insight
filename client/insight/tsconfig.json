{
  "compilerOptions": {
    "outDir": ".build",
    "baseUrl": "/",
    "module": "esnext",
    // "target": "es2016", https://github.com/parcel-bundler/parcel/issues/954
    "target": "es5",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", ".build", ".cache", "dist", "demo"]
}
