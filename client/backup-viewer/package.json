{
  "name": "backup-viewer",
  "version": "1.1.0",
  "description": "View FMS Insight Log Data directly from the SQLite file",
  "repository": {
    "type": "git",
    "url": "https://github.com/SeedTactics/fms-insight.git"
  },
  "author": "John Lenz",
  "license": "BSD-3-Clause",
  "main": "src/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "build-background": "tsc --incremental --project src/background/tsconfig.json && cp src/background/background.html build/background",
    "build-renderer": "parcel build --out-dir build/app --public-url ./ src/renderer/renderer.html",
    "build": "yarn run build-background && yarn run build-renderer",
    "start": "yarn run build && electron .",
    "dist": "rimraf build && rimraf package && yarn run build && electron-builder"
  },
  "browserslist": [
    "electron >= 7.0"
  ],
  "build": {
    "appId": "com.seedtactics.fms-insight.backup-viewer",
    "productName": "SeedTactic FMS Insight Backup Viewer",
    "directories": {
      "buildResources": "resources",
      "output": "package"
    },
    "files": [
      "package.json",
      "src/main.js",
      "src/prelude.js",
      "build/app/*",
      "build/background/background.html",
      "build/background/*.js"
    ],
    "publish": [
      "github"
    ]
  },
  "dependencies": {
    "moment": "^2.29.1",
    "sqlite": "^4.0.19",
    "sqlite3": "5.0.2"
  },
  "devDependencies": {
    "@types/node": "14.14.34",
    "@types/sqlite3": "^3.1.7",
    "electron": "12.0.1",
    "electron-builder": "^22.10.5",
    "node-forge": "^0.10.0",
    "parcel": "^1.11.0",
    "rimraf": "^3.0.0",
    "typescript": "^4.2.3"
  },
  "resolutions": {
    "@babel/preset-env": "7.13.8"
  },
  "comment": {
    "babel-preset-resolution": "https://github.com/parcel-bundler/parcel/issues/5943"
  }
}
